class Calculadora:
    def __init__(self):
        self.polinomio1=[]
        self.polinomio2=[]

    def menu(self):
        print()
        menu ={
            1:"Suma",
            2:"Resta",
            3:"Multiplicacion",
            4:"Derivada",
            5:"Integral",
            6:"Salir"
            }
        for a,b in menu.items():
            print(a,b)
        opcion=int(input("Introduzca la opcion deseada: "))
        if opcion==1:
            self.suma()
        elif opcion==2:
            self.resta()
        elif opcion==3:
            self.multiplicacion()
        elif opcion==4:
            self.derivada()
        elif opcion==5:
            self.integral()
        elif opcion==6:
            print("Saliendo de la calculadora")
            exit()
    
    def suma(self):

        print("------SUMA-------")
        grado=int(input("Grado del primer polinomio: "))
        for i in range(0,grado):
            print("Grado : ",i+1)
            valor = int(input("\t Valor: "))
            self.polinomio1.append(valor)
        print("\n El primer polinomio es: " )
        for i in range (0,len(self.polinomio1)):
            print("+ (",self.polinomio1[i],"x^",i+1,") \t",end="")
        grado_sp=int(input("\n\n Grado del segundo polinomio: "))
        for i in range(0,grado_sp):
            print("Grado : ",i+1)
            valor_sp = int(input("\t Valor: "))
            self.polinomio2.append(valor_sp)
        print("\n El segundo polinomio es: " )
        for i in range (0,len(self.polinomio2)):
            print("+ (",self.polinomio2[i],"x^",i+1,") \t",end="")
        mayor=[]
        menor=[]
        resultado=[]
        if len(self.polinomio1)>len(self.polinomio2):
            mayor = self.polinomio1
            menor = self.polinomio2
        else:
            mayor = self.polinomio2
            menor = self.polinomio1
        for i, _ in enumerate(mayor):
            if i + 1 > len(menor):
                resultado.append(mayor[i])
            else:
                resultado.append(mayor[i] + menor[i])
        print("\n\n El resultado de la suma de polinomios es : ")        
        for i in range (0,len(resultado)):
            print("+ (",resultado[i],"x^",i+1,") \t",end="")
        
    def resta(self):
        print("----RESTA----")
        grado=int(input("Grado del primer polinomio: "))
        for i in range(0,grado):
            print("Grado : ",i+1)
            valor = int(input("\t Valor: "))
            self.polinomio1.append(valor)
        print("\n El primer polinomio es: " )
        for i in range (0,len(self.polinomio1)):
            print("+ (",self.polinomio1[i],"x^",i+1,") \t",end="")
        grado_sp=int(input("\n\n Grado del segundo polinomio: "))
        for i in range(0,grado_sp):
            print("Grado : ",i+1)
            valor_sp = int(input("\t Valor: "))
            self.polinomio2.append(valor_sp)
        print("\n El segundo polinomio es: " )
        for i in range (0,len(self.polinomio2)):
            print("+ (",self.polinomio2[i],"x^",i+1,") \t",end="")
        mayor=[]
        menor=[]
        resultado=[]
        if len(self.polinomio1)>len(self.polinomio2):
            mayor = self.polinomio1
            menor = self.polinomio2
        else:
            mayor = self.polinomio2
            menor = self.polinomio1
        for i, _ in enumerate(mayor):
            if i + 1 > len(menor):
                resultado.append(mayor[i])
            else:
                resultado.append(mayor[i] - menor[i])
        print("\n\n El resultado de la resta de polinomios es : ")        
        for i in range (0,len(resultado)):
            print("+ (",resultado[i],"x^",i+1,") \t",end="")
           
    def multiplicacion(self):
        
        print("Multiplicacion")
        grado=int(input("Grado del primer polinomio: "))
        for i in range(0,grado):
            print("Grado : ",i+1)
            valor = int(input("\t Valor: "))
            self.polinomio1.append(valor)
        print("\n El primer polinomio es: " )
        for i in range (0,len(self.polinomio1)):
            print("+ (",self.polinomio1[i],"x^",i+1,") \t",end="")
        grado_sp=int(input("\n\n Grado del segundo polinomio: "))
        for i in range(0,grado_sp):
            print("Grado : ",i+1)
            valor_sp = int(input("\t Valor: "))
            self.polinomio2.append(valor_sp)
        print("\n El segundo polinomio es: " )
        for i in range (0,len(self.polinomio2)):
            print("+ (",self.polinomio2[i],"x^",i+1,") \t",end="")
        mayor=[]
        menor=[]
        resultado=[]
        if len(self.polinomio1)>len(self.polinomio2):
            mayor = self.polinomio1
            menor = self.polinomio2
        else:
            mayor = self.polinomio2
            menor = self.polinomio1
        for i, _ in enumerate(mayor):
            if i + 1 > len(menor):
                resultado.append(mayor[i])
            else:
                resultado.append(mayor[i] * menor[i])
        print("\n\n El resultado de la multiplicaci√≥n de polinomios es : ")        
        for i in range (0,len(resultado)):
            print("+ (",resultado[i],"x^",i+1,") \t",end="")

    def derivada(self):
        print("Derivada")
    def integral(self):
        print("Integral")

calculadora=Calculadora()
calculadora.menu()

